{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "initiativeName": {
            "type": "string",
            "metadata": {
                "description": "The displayname of the Azure Policy Initiative"
            }
        },
        "initiativeParameters": {
            "type": "object",
            "metadata": {
                "description": "Parameters of a invidual policy"
            }
        },
        "policyDefinitionId": {
            "type": "array",
            "metadata": {
                "description": "Object policyDefinitionId"
            }
        },
        "displayName": {
            "type": "string",
            "metadata": {
                "description": "Displayname of the Azure Policy Initiative"
            }
        },
        "description": {
            "type": "string",
            "metadata": {
                "description": "The description of the Azure Policy Initiative"
            }
        },
        "metadata": {
            "type": "object",
            "metadata": {
                "description": "Metadata of the Azure Policy Initiative"
            }

        },
        "defaultPolicyDefinitions": {
            "type": "array",
            "metadata": {
                "description": "contains the PolicyDefinitions"
            }

        }
    },
    "variables": {},
    "resources": [
        {
            "Name": "[parameters('initiativeName')]",
            "type": "Microsoft.Authorization/policySetDefinitions",
            "apiVersion": "2019-06-01",
            "properties": {
                "policyType": "Custom",
                "displayName": "[parameters('displayName')]",
                "description": "[parameters('description')]",
                "metaData": "[parameters('metaData')]",
                "parameters": "[parameters('initiativeParameters')]",
                "PolicyDefinitionGroups": null,
                "PolicyDefinitions": "[union(parameters('defaultPolicyDefinitions'), parameters('policyDefinitionId'))]"
            }
        }
    ],
    "outputs": {
        "policySetDefinitionId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/policySetDefinitions', parameters('initiativeName'))]"
        }
    }
}
